{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests__/**",
        "**/typings/**",
        "**/demo/**",
        "**/example/**",
        "**/docs/**",
        "**/cli/bin/**",
        "**/dist/**"
      ]
    }
  }
}